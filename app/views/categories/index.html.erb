<div class="container-fluid">
  <div class="row">
      <%= form_tag(destroy_user_session_path, method: :delete) do %>
      <%= submit_tag('Log Off', class: 'btn btn-danger') %>
    <% end %>
  </div>
</div>

<div class="container mt-2">
  <div class="row">
    <div class="col-md-12">
      <div class="category-list">
        <% @categories.each do |category| %>
          <div class="col-md-4 mb-2">
            <div class="card category-card p-1">
              <div class="col-md-6 category-item p-2">
                <%= link_to category_transactions_path(category), class: 'category-link' do %>
                  <div class="d-flex col-md-3 justify-content-between">
                    <div class="col-md-2 w-3">
                      <p>
                        <%= category.icon %>
                      </i></p>
                    </div>
                    <div class="row-md-auto justify-content-between category-name">
                      <p><%= category.name %></p>
                      <p class="p-0 m-0"><%= category.created_at.strftime('%d, %b %Y') %></p>
                    </div>
                    <div class="col-md-6 category-amount">
                      <h5><%= number_to_currency(category.total_amount) %></h5>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex container-fluid mt-2">
  <div class="d-flex col justify-content-center align-items-center">
    <div class="col-md-1 mb-2 justify-content-center align-items-center w-100 h-50">
      <%= link_to new_category_path, class: 'btn btn-success text-white btn-block w-100 p-2' do %>
        New category
      <% end %>
    </div>
  </div>
</div>





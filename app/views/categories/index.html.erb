

<div class="container mt-2 transactionz">
  <div class="row">
    <div class="col-md-12">
      <div class="category-list">
        <% @categories.each do |category| %>
          <div class="col-md-4 mb-2">
            <div class="card category-card p-1">
              <div class="col-md-6 category-item p-2">
                <%= link_to category_transactions_path(category), class: 'category-link' do %>
                  <div class="d-flex col-md-3 justify-content-between">
                    <div class="col-md-2 w-3">
                      <p>
                        <%= category.icon %>
                      </i></p>
                    </div>
                    <div class="row-md-auto justify-content-between category-name">
                      <p><%= category.name %></p>
                      <p class="p-0 m-0"><%= category.created_at.strftime('%d, %b %Y') %></p>
                    </div>
                    <div class="col-md-6 category-amount">
                      <h5><%= number_to_currency(category.total_amount) %></h5>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="fixed-bottom bottom-0 w-100">
    <div class="container-fluid actions bg-green">
      <%= link_to 'Add Category', new_category_path, class: " category-button w-100 btn btn-md btn-success bg-green mt-3 mb-3" %>
    </div>
  </div>
